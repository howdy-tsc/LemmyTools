{

  "description": "An addon for lemmy to make it a bit better.",
  "manifest_version": 2,
  "name": "LemmyTools",
  "version": "0.3",
  "homepage_url": "https://github.com/howdy-tsc/LemmyTools",
  "icons": {
    "48": "assets/lemmy-tools.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ltMain.js"]
    }
  ],

  "permissions": [
    "storage",
    "webRequest"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "LemmyTools@thesimplecorner.org",
      "strict_min_version": "42.0"
    }
  }
  

}
